<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/awwass"
    tools:context=".Registro">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:background="@drawable/carretera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rootView" />

    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnregistro"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="229dp"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/button_background2"
            android:text="Registrar"
            android:textAllCaps="false"
            android:textColor="#EEF2F7"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="377dp"
            android:layout_height="370dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="72dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/nombres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/edittelefono"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_person_black_24dp2"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawablePadding="11dp"
                    android:ems="10"
                    android:hint="@string/ing"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColorHint="#FFF" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="188dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/telefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/lnpapellidos"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_phone_android_black_24dp"
                    android:drawableLeft="@drawable/baseline_lock_white_24dp"
                    android:drawablePadding="11dp"
                    android:ems="10"
                    android:hint="@string/INGTEL"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColorHint="#FFF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="65dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/apellidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/lnpapellidos"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawablePadding="11dp"
                    android:ems="10"
                    android:hint="@string/INGA"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColorHint="#FFF" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="129dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/correo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/baseline_email_white_24dp"
                    android:drawableLeft="@drawable/baseline_email_white_24dp"
                    android:drawablePadding="11dp"
                    android:ems="10"
                    android:hint="@string/INGCOR"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColorHint="#FFF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-1dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/rpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/baseline_lock_white_24dp"
                    android:drawableLeft="@drawable/baseline_lock_white_24dp"
                    android:drawablePadding="11dp"
                    android:ems="10"
                    android:hint="@string/REPCL"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColorHint="#FFF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/baseline_lock_white_24dp"
                    android:drawableLeft="@drawable/baseline_lock_white_24dp"
                    android:drawablePadding="11dp"
                    android:ems="10"
                    android:hint="@string/INCL"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColorHint="#FFF" />

            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="107dp"
            android:text="@string/REGIS"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="82dp"
            android:layout_height="96dp"
            android:layout_alignStart="@+id/btnregistro"
            android:layout_alignTop="@+id/btnregistro"
            android:layout_marginStart="33dp"
            android:layout_marginTop="-9dp"
            android:visibility="gone" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView33"
        android:layout_width="107dp"
        android:layout_height="103dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/userphoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rootView" />
</android.support.constraint.ConstraintLayout>